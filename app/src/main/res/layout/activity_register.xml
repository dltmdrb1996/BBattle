<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임을 정해주세요."
            android:textColor="#000000"
            android:fontFamily="@font/dalmoorifont"
            android:paddingTop="30dp"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/reg_Id_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="띄어쓰기 포함 20글자 이내"
            android:fontFamily="@font/dalmoorifont"
            android:layout_marginTop="10dp"
            android:maxLength="20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="당신의 키를 입력해주세요."
            android:textColor="#000000"
            android:fontFamily="@font/dalmoorifont"
            android:paddingTop="30dp"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/reg_Height_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:fontFamily="@font/dalmoorifont"
            android:hint="cm"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="당신의 몸무게를 입력해주세요."
            android:textColor="#000000"
            android:fontFamily="@font/dalmoorifont"
            android:paddingTop="30dp"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/reg_Weight_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:fontFamily="@font/dalmoorifont"
            android:hint="kg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="당신의 나이를 입력해주세요."
            android:textColor="#000000"
            android:fontFamily="@font/dalmoorifont"
            android:paddingTop="30dp"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/reg_Age_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:fontFamily="@font/dalmoorifont"
            android:hint="cm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="당신의 성별을 선택해주세요."
            android:textColor="#000000"
            android:fontFamily="@font/dalmoorifont"
            android:paddingTop="30dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/reg_Man_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/dalmoorifont"
                android:text="남"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/dalmoorifont"
                android:text="여"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonclick"
            android:fontFamily="@font/dalmoorifont"
            android:text="START"
            android:textSize="25dp"/>
    </LinearLayout>

</LinearLayout>